{
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "name": "json-app",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "options": {
        "browser": "src/main.ts",
        "tsConfig": "tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          },
          "src/assets"
        ],
        "stylePreprocessorOptions": {
          "includePaths": [
            "src/assets/fonts",
            "src/styles"
          ]
        },
        "styles": [
          "src/styles.scss"
        ],
        "polyfills": [
          "@angular/localize/init"
        ],
        "outputPath": "dist/json-app"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "1MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kB",
              "maximumError": "8kB"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production",
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "json-app:build:production"
        },
        "development": {
          "buildTarget": "json-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n"
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "src/**/*.ts",
          "src/**/*.html"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "configDir": ".storybook",
        "browserTarget": "json-app:build",
        "compodoc": true,
        "compodocArgs": [
          "-e",
          "json",
          "-d",
          "."
        ],
        "port": 6006,
        "experimentalZoneless": true
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "options": {
        "configDir": ".storybook",
        "browserTarget": "json-app:build",
        "compodoc": true,
        "compodocArgs": [
          "-e",
          "json",
          "-d",
          "."
        ],
        "outputDir": "storybook-static",
        "experimentalZoneless": true
      }
    }
  }
}