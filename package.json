{
  "name": "json-app",
  "version": "0.0.0",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "watch": "nx build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "npx angular-cli-ghpages --dir=dist/json-app/browser",
    "lint": "nx lint",
    "prettier": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "prettier:check": "prettier --check \"src/**/*.{ts,html,scss}\"",
    "storybook": "nx run json-app:storybook",
    "build-storybook": "nx run json-app:build-storybook"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html"
    ],
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/src/app/shared/$1",
      "^@components/(.*)$": "<rootDir>/src/app/components/$1",
      "^@pages/(.*)$": "<rootDir>/src/app/pages/$1",
      "^@services/(.*)$": "<rootDir>/src/app/services/$1",
      "^@store/(.*)$": "<rootDir>/src/app/store/$1"
    },
    "globals": {
      "transform": {
        "^.+\\.(ts|js|html)$": [
          "ts-jest",
          {
            "tsconfig": "<rootDir>/tsconfig.spec.json",
            "stringifyContentPathRegex": "\\.html$"
          }
        ]
      }
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular-architects/ngrx-toolkit": "^20.4.1",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@ngrx/operators": "^20.0.1",
    "@ngrx/signals": "^20.0.1",
    "@ngrx/store": "^20.0.1",
    "@ngrx/store-devtools": "^20.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.3",
    "@angular-devkit/core": "^20.3.3",
    "@angular-devkit/schematics": "^20.3.3",
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@angular/localize": "^20.3.2",
    "@compodoc/compodoc": "^1.1.30",
    "@nx/angular": "21.5.3",
    "@nx/workspace": "21.5.3",
    "@schematics/angular": "^20.3.3",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/angular": "^9.1.8",
    "@types/jest": "^29.5.2",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "eslint-plugin-storybook": "^9.1.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.6.1",
    "nx": "21.5.3",
    "prettier": "^3.6.2",
    "storybook": "^9.1.8",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
